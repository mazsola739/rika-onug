{
  "name": "onug-backend",
  "version": "1.0.0",
  "description": "One Night Ultimate Werewolf - Backend",
  "author": "Rika",
  "license": "MIT",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env ONUG_REPOSITORY_TYPE=local ONUG_LOG_LEVEL=WARN nodemon -w src -x tsx ./src/server.js",
    "start:ec2": "cross-env ONUG_REPOSITORY_TYPE=local ONUG_LOG_LEVEL=WARN nodemon -w src -x tsx ./src/server.js",
    "test": "node --test --experimental-test-coverage",
    "build": "vite build",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "one-night-ultimate-werewolf",
    "backend"
  ],
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.799.0",
    "@aws-sdk/util-dynamodb": "^3.799.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^5.1.0",
    "json-tabifier": "^1.0.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vite-express": "0.21.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "vite": "^6.2.5"
  }
}