{
  "name": "onug-backend",
  "version": "1.0.0",
  "description": "One Night Ultimate Werewolf - Backend",
  "author": "Rika",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "start": "cross-env ONUG_REPOSITORY_TYPE=local ONUG_LOG_LEVEL=WARN nodemon -w src -x tsx ./src/server.js",
    "start:ec2": "cross-env ONUG_REPOSITORY_TYPE=local ONUG_LOG_LEVEL=WARN nodemon -w src -x tsx /home/ubuntu/app/rika-onug/onug-backend/src/server.js",
    "test": "node --test --experimental-test-coverage",
    "build": "vite build",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers",
    "@models": "src/models",
    "@utils": "src/utils",
    "@config": "src/config"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "one-night-ultimate-werewolf",
    "backend"
  ],
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2",
    "uuid": "^9.0.1",
    "vite-express": "*",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/express": "^4.17.15",
    "@types/node": "^20.9.3",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.11.0",
    "nodemon": "^3.0.1",
    "vite": "^5.0.2"
  }
}
