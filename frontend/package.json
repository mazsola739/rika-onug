{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "vite",
    "start:prod": "vite preview --host",
    "build": "tsc && vite build",
    "build:debug": "cross-env DEBUG=vite-tsconfig-paths yarn vite",
    "build:prod": "tsc && vite build --mode prod",
    "serve": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --watch=false",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "db-admin": "dynamodb-admin --dynamo-endpoint=http://localhost:8000"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "fs": "^0.0.1-security",
    "json-tabifier": "^1.1.1",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "path": "^0.12.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "^7.9.6",
    "react-use": "^17.6.0",
    "react-use-websocket": "^4.13.0",
    "vite": "^7.2.4",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vite-typescript-plugin": "^0.3.0",
    "vitest": "^4.0.12",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "sharp": "^0.34.5",
    "typescript-eslint": "^8.47.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "One Night Ultimate Werewolf - Frontend",
  "author": "Rika",
  "license": "MIT"
}
